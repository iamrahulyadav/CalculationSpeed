<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/level_back"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/ring_memo"
        android:padding="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView_grid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_title_grid"
        android:textSize="30sp"
        android:layout_below="@+id/imageView_grid"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="20dp"
        android:id="@+id/textView_hint_grid"
        android:layout_below="@+id/textView_title_grid"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:textColor="#ffffff"
        />
</RelativeLayout>