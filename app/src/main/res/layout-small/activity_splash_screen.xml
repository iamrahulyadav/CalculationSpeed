<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_layout"
    android:background="@drawable/read_back"
    tools:context="com.example.vishnu.calculationspeed.SplashScreen">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/view2">
        <android.support.v4.widget.ContentLoadingProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:indeterminateDrawable="@drawable/splash_ring"
            android:layout_gravity="center"
            android:max="100"
            android:progress="20"
           />

    </android.support.v7.widget.ContentFrameLayout>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Z"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zeal Info"
        android:textSize="5sp"
        android:textColor="#ffffff"
        android:id="@+id/textView6"
        android:textStyle="italic"
        android:gravity="top"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speedy Math"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:id="@+id/textView8"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="65dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Become a master of calculation By: Speedy Math"
        android:textSize="5dp"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />


</RelativeLayout>
