<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/memo_back"
    android:layout_height="130dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ring_memo"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageView_grid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_title_grid"
        android:textSize="12sp"
        android:layout_below="@+id/imageView_grid"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="8sp"
        android:id="@+id/textView_hint_grid"
        android:layout_below="@+id/textView_title_grid"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:textColor="#ffffff"
        />
</RelativeLayout>