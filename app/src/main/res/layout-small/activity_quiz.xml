<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_opt"
    android:layout_height="match_parent"
    android:background="@drawable/read_back"
    tools:context="com.example.vishnu.calculationspeed.Quiz">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView_highScore"
            android:text="Best Score:100/100"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:paddingLeft="10dp"
            android:background="@drawable/memo_toolbar"
            android:gravity="left|center_vertical"/>


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Score"
        android:text="Score:100/100"
        android:textColor="#ffffff"
        android:layout_below="@+id/view"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Timer"
        android:layout_below="@+id/view"
        android:id="@+id/textView_Timer"
        android:layout_marginTop="5dp"

        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/X"
        android:textSize="20sp"
        android:id="@+id/plus_x"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:id="@+id/textView_opr"
        android:textColor="#ffffff"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Y"
        android:textSize="20sp"
        android:id="@+id/plus_y"
        android:textColor="#ffffff"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="110dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textText_sum"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="_ _"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="130dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/listView_opt"
        android:layout_below="@+id/plus_x"
        android:layout_marginTop="5dp"
        android:dividerHeight="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:divider="#ffffff"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="End Test"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:id="@+id/button_end"
        android:layout_below="@+id/listView_opt"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_false"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Start Quiz"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_next"
        android:layout_below="@+id/listView_opt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_shape"
        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
